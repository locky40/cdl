%{
#include<stdio.h>
int line=0,word=0,ch=0;
%}
%%
[a-z|A-Z|0-9] {ch++;}
“ “ {word++;}
“\n”+ {line++; word++;}
. {}
%%
main(int argc, char *argv[])
{
yyin=fopen(argv[1],"r");
yylex();
printf(" This File contains ...\n");
printf("Lines: %d\nWords:%d\nCharacters: %d\n”,line,word,ch}



/*
